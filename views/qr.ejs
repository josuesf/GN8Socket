<% var title = 'GN8' %>
<% include head %>
 
    <div class="row text-center color-container" style="margin-top: 50px;">

      <img src='<%= imagen %>' alt="avatar" class="avatar">

      <h1 class="profile-name"><%= nombre %></h1>

    </div>



    <!-- Timeline content -->

    <div class="container friends-container" style="margin-top:50px;">

      <div class="row">

      <div class="col-md-10 animated fadeInDown">

        <div class="row">

        	<% for(var i=0;i<invitaciones.length;i++) { %>

	          <div class="col-sm-6">

	              <div class="panel">

	                  <div class="panel-body p-t-10">

	                      <div class="media-main">

	                        <div class="row text-center">
						      	<div class="col-md-12" id='<%= invitaciones[i].id_post %>'> 
						      	</div>
						    </div>

						    <script type="text/javascript">
						    	$(document).ready(function() {
						    		$("#"+'<%= invitaciones[i].id_post %>').empty();
						    		jQuery("#"+'<%= invitaciones[i].id_post %>').qrcode({width: 200,height: 200,text: '<%= invitaciones[i].codigoqr_des %>'});
						    	});
						    </script>

	                          <div class="pull-right btn-group-sm">
	                          	<% if(invitaciones[i].estado=="WAIT"){%>
	                          		<i class="fa fa-times-circle absent-status fa-2x text-warning"></i>
	                          	<%}else{%>
	                          		<i class="fa fa-check-circle connected-status fa-2x text-success"></i>
	                          	<%}%>
	                          </div>

	                          <div class="info">
	                              <h4><%= invitaciones[i].nombre_post %></h4>
	                          </div>

	                      </div>

	                      <div class="clearfix"></div>

	                      <hr>
	 
	                  </div>

	              </div>

	          </div>

	        <% } %>
      </div>

      </div>

      </div>

    </div><!--End Timeline content -->
 

<% include foot %>